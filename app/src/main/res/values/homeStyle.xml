<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="cardViewStyle.">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="imageViewStyle">
        <item name="android:layout_width">@dimen/a60</item>
        <item name="android:layout_height">@dimen/a60</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="textStyle.">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/textSize20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/textSize16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">@dimen/a10</item>
        <item name="android:layout_margin">@dimen/a10</item>
        <item name="android:background">@drawable/card_bg</item>


    </style>

</resources>