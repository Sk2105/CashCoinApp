<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/softPurple"
    style="@style/mpvStyle">



    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:elevation="@dimen/a20"
        android:layout_gravity="center"
        android:layout_margin="@dimen/a10"
        android:src="@drawable/cash_coin_icon" />

    <LinearLayout
        style="@style/mwvStyle"
        android:layout_alignParentBottom="true"
        android:gravity="center">


        <LinearLayout
            style="@style/mpStyle"
            android:layout_gravity="end"
            android:layout_margin="@dimen/a10"
            android:background="@drawable/bt"
            android:gravity="center"
            android:onClick="signIn"
            android:elevation="@dimen/a20"
            android:padding="@dimen/a10">

            <ImageView
                android:layout_width="@dimen/a32"
                android:layout_height="@dimen/a32"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/a5"
                android:src="@drawable/google_icon" />


            <TextView
                style="@style/wpStyle"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:padding="@dimen/a10"
                android:text="@string/sign_in"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize20"
                android:textStyle="normal" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
